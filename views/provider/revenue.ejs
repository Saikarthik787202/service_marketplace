<!DOCTYPE html>
<html>

<head>
    <title>My Revenue</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../partials/header') %>
        <div class="container">
            <h2>My Revenue</h2>
            <p><strong>Total Revenue:</strong> $<%= totalRevenue %>
            </p>
            <table>
                <tr>
                    <th>Service</th>
                    <th>Client</th>
                    <th>Price</th>
                    <th>Status</th>
                </tr>
                <% orders.forEach(order=> { %>
                    <tr>
                        <td>
                            <%= order.service.name %>
                        </td>
                        <td>
                            <%= order.user?.name || 'N/A' %>
                        </td>
                        <td>$<%= order.service.price %>
                        </td>
                        <td>
                            <%= order.status %>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </div>
        <%- include('../partials/footer') %>
</body>

</html>