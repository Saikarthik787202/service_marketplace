<!DOCTYPE html>
<html>

<head>
    <title>Revenue Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../partials/header') %>
        <div class="container">
            <h2>Revenue Dashboard</h2>
            <p><strong>Total Revenue:</strong> $<%= totalRevenue %>
            </p>
            <h3>Per Provider</h3>
            <table>
                <tr>
                    <th>Provider</th>
                    <th>Revenue</th>
                </tr>
                <% providerRevenues.forEach(pr=> { %>
                    <tr>
                        <td>
                            <%= pr.name %>
                        </td>
                        <td>$<%= pr.revenue %>
                        </td>
                    </tr>
                    <% }) %>
            </table>
            <h3>All Accepted Orders</h3>
            <table>
                <tr>
                    <th>Service</th>
                    <th>Provider</th>
                    <th>Client</th>
                    <th>Price</th>
                    <th>Status</th>
                </tr>
                <% orders.forEach(order=> { %>
                    <tr>
                        <td>
                            <%= order.service?.name %>
                        </td>
                        <td>
                            <%= order.service?.provider?.name %>
                        </td>
                        <td>
                            <%= order.user?.name %>
                        </td>
                        <td>$<%= order.service?.price %>
                        </td>
                        <td>
                            <%= order.status %>
                        </td>
                    </tr>
                    <% }) %>
            </table>
        </div>
        <%- include('../partials/footer') %>
</body>

</html>