<header>
    <div class="header-content">
        <div class="logo">TaskSwift</div>
        <nav class="nav-links">
            <a href="/dashboard">Dashboard</a>
            <a href="/services">Services</a>
            <a href="/orders">My Orders</a>
            <a href="/wishlist">Wishlist</a>
            <% if (user && user.role==='admin' ) { %>
                <a href="/admin/dashboard">Admin Dashboard</a>
                <a href="/admin/categories">Categories</a>
                <a href="/admin/revenue">Revenue Dashboard</a>
                <% } %>
                    <% if (user && user.role==='provider' ) { %>
                        <a href="/provider/dashboard">Provider Dashboard</a>
                        <a href="/provider/orders">Provider Orders</a>
                        <a href="/provider/revenue">My Revenue</a>
                        <% } %>
                            <% if (user) { %>
                                <a href="/logout">Logout</a>
                                <% } else { %>
                                    <a href="/login">Login</a>
                                    <a href="/register">Register</a>
                                    <% } %>
        </nav>
        <div class="header-right">
            <% if (user) { %>
                <span class="user-info">Logged in as <strong>
                        <%= user.name %>
                    </strong> (<%= user.role %>)</span>
                <% } %>

        </div>
    </div>
</header>